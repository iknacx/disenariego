---
const { layout = "fixed" } = Astro.props;
---

<div class={`${layout} inset-0 -z-10`} transition:name="hero">
    <img
        src="/images/hero.avif"
        alt=""
        role="presentation"
        class="size-full object-cover"
        fetchpriority="high"
        decoding="async"
    />
    <div class="absolute inset-0 bg-linear-(--hero-overlay)"></div>
</div>
