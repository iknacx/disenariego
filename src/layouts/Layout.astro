---
import "../styles/global.css";

import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import WhatsAppBubble from "../components/WhatsAppBubble.astro";

import { ClientRouter } from "astro:transitions";

interface Props {
    title?: string;
    description?: string;
    image?: string;
}

const {
    title = "Diseña Riego",
    description = "Más de 30 años diseñando, instalando y manteniendo sistemas de riego automático eficientes, confiables y sostenibles para proyectos residenciales, comerciales e institucionales en Chile.",
    image = "/favicon.svg",
} = Astro.props;

const canonicalURL = new URL(
    Astro.url.pathname,
    Astro.site ?? "https://riego.iknacx.dev",
);
const ogImage = new URL(image, Astro.site ?? "https://riego.iknacx.dev");
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <meta
            name="format-detection"
            content="telephone=no, email=no, address=no"
        />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="icon" href="/favicon.ico" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <meta name="description" content={description} />
        <link rel="canonical" href={canonicalURL} />

        <!-- Open Graph -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={canonicalURL} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={ogImage} />
        <meta property="og:locale" content="es_CL" />
        <meta property="og:site_name" content="Diseña Riego" />

        <!-- Twitter Card -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={ogImage} />

        <ClientRouter />
        <link
            rel="preload"
            as="image"
            href="/images/hero.avif"
            fetchpriority="high"
        />
        <slot name="head" />
    </head>
    <body>
        <Header transition:name="nav" transition:persist />
        <slot />
        <Footer />
        <WhatsAppBubble />
    </body>
</html>

<style>
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }
</style>
