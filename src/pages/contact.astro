---
import Layout from "../layouts/Layout.astro";
import { Phone, Mail, MapPin, Send } from "@lucide/astro";

import Hero from "../components/Hero.astro";

import { phone, email, address } from "../assets/data.json";

const entries = [
    {
        icon: Phone,
        label: "Teléfono",
        value: phone,
    },
    {
        icon: Mail,
        label: "Correo Electrónico",
        value: email,
    },
    {
        icon: MapPin,
        label: "Dirección",
        value: address,
    },
];
---

<Layout
    title="Contacto | Diseña Riego"
    description="Contáctanos para solicitar una cotización sin compromiso. Estamos listos para ayudarte con tu proyecto de riego automático residencial, comercial o institucional en Chile.">
    <section class="relative py-24 overflow-hidden">
        <Hero layout="absolute" />
        <div class="relative container mx-auto px-4 text-center">
            <span
                class="text-primary-fg/70 font-medium text-sm uppercase tracking-wider">
                Hablemos
            </span>
            <h1
                class="text-4xl md:text-5xl font-display font-bold text-primary-fg mt-3">
                Contacto
            </h1>
            <p class="text-primary-fg/70 mt-4 max-w-xl mx-auto">
                Estamos listos para ayudarte con tu proyecto de riego.
            </p>
        </div>
    </section>
    <section class="py-24">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
                <div class="space-y-8">
                    <div>
                        <h2
                            class="text-2xl font-display font-bold text-foreground mb-6">
                            Información de Contacto
                        </h2>
                        <p class="text-muted-fg text-sm leading-relaxed mb-8">
                            Escribenos o llámanos para solicitar una cotización
                            sin compromiso.
                        </p>
                    </div>
                    {
                        entries.map((entry) => (
                            <div
                                key={entry.label}
                                class="flex items-start gap-4">
                                <div class="size-10 rounded-lg bg-primary/10 flex items-center justify-center shrink-0">
                                    <entry.icon class="size-5 text-primary" />
                                </div>
                                <div>
                                    <div class="text-sm font-medium text-foreground">
                                        {entry.label}
                                    </div>
                                    <div class="text-sm text-muted-fg">
                                        {entry.value}
                                    </div>
                                </div>
                            </div>
                        ))
                    }
                </div>

                <div class="lg:col-span-2">
                    <form
                        method="POST"
                        class="bg-card rounded-xl p-8 shadow-md">
                        <h3
                            class="font-display text-xl font-semibold text-foreground mb-6">
                            Envíanos un mensaje
                        </h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                            <div>
                                <label
                                    class="block text-sm font-medium text-foreground mb-1.5">
                                    Nombre
                                </label>
                                <input
                                    type="text"
                                    placeholder="Tu nombre"
                                    class="w-full px-4 py-3 rounded-lg border border-border bg-background text-foreground text-sm focus:outline-none focus:ring-2 focus:ring-green-100"
                                    required
                                />
                            </div>
                            <div>
                                <label
                                    class="block text-sm font-medium text-foreground mb-1.5">
                                    Email
                                </label>
                                <input
                                    type="email"
                                    placeholder="tu@email.com"
                                    class="w-full px-4 py-3 rounded-lg border border-border bg-background text-foreground text-sm focus:outline-none focus:ring-2 focus:ring-green-100"
                                    required
                                />
                            </div>
                        </div>
                        <div class="mb-4">
                            <label
                                class="block text-sm font-medium text-foreground mb-1.5">
                                Teléfono
                            </label>
                            <input
                                type="tel"
                                placeholder="+56 9 1234 5678"
                                class="w-full px-4 py-3 rounded-lg border border-border bg-background text-foreground text-sm focus:outline-none focus:ring-2 focus:ring-green-100"
                                required
                            />
                        </div>
                        <div class="mb-6">
                            <label
                                class="block text-sm font-medium text-foreground mb-1.5">
                                Mensaje
                            </label>
                            <textarea
                                rows="5"
                                placeholder="Cuentanos sobre tu proyecto.."
                                class="w-full px-4 py-3 rounded-lg border border-border bg-background text-foreground text-sm focus:outline-none focus:ring-2 focus:ring-green-100"
                                required></textarea>
                        </div>
                        <button
                            type="submit"
                            class="inline-flex items-center gap-2 px-8 py-3 bg-primary text-primary-fg rounded-lg font-semibold hover:opacity-90 transition-opacity">
                            Enviar Mensaje
                            <Send class="size-4" />
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</Layout>
